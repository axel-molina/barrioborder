<div class="container">
    <div class="col-4" style="margin: 150px auto;">
        <form action="/admin/login" method="post">
            <div class="mb-3">
                <label style="color: white;" for="exampleInputEmail1" class="form-label">Usuario</label>
                <input type="text" class="form-control" name="usuario">
            </div>
            <div class="mb-3">
                <label style="color: white;" for="exampleInputPassword1" class="form-label">Contraseña</label>
                <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-warning">Entrar</button>
        </form>
        {{#if error}}
        <p style="color: red;">Usuario o contraseña incorrecta</p>
        {{/if}}
    </div>
</div>