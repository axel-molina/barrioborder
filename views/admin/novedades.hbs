<div class="container" style="margin-top: 80px;">
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{usuario}} <a href="/admin/login/logout"
                    class="btn btn-sm
                    btn-danger">Cerrar sesi√≥n <i class="fa fa-sign-out"
                        aria-hidden="true"></i></a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h3>Listado de novedades</h3>
        </div>
        <div class="col-3">
            <a href="/admin/novedades/agregar" class="btn btn-success"
                style="margin-left: 120px;">Agregar <i class="fa fa-plus"
                    aria-hidden="true"></i></a>
        </div>
        <div class="col-3 text-right">
            <form class="form-inline" action="/admin/novedades" method="get">
                <input class="form-control mr-sm-2" type="search"
                    placeholder="Buscar" aria-label="Search" name="q" {{#if q}} value="{{q}}" {{/if}}>
                <button class="btn btn-outline-success my-2 my-sm-1"
                    type="submit">Buscar</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td><a href="/admin/novedades/modificar/{{id}}"
                                title="Editar" class="btn btn-primary"><i
                                    class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}"
                                title="Borrar" class="btn btn-danger"><i
                                    class="fa fa-trash-o" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{#if is_search}}
            {{#unless novedades.length}}
            <p>No se encontraron resultado para "<b>{{q}}</b></p>
            {{/unless}}
            {{/if}}
        </div>
    </div>
</div>